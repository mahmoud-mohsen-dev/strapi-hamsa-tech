{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "delivery_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "shipped",
        "delivered",
        "cancelled",
        "failed",
        "returned",
        "on hold"
      ],
      "required": true,
      "default": "pending"
    },
    "total_order_cost": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "guest_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::guest-user.guest-user",
      "inversedBy": "orders"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "card",
        "cash on delivery"
      ],
      "required": true
    },
    "shipping_address": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    },
    "billing_address": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    },
    "coupon": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::offer.offer",
      "inversedBy": "orders"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid off",
        "refunded",
        "partial refund",
        "canceled",
        "failed"
      ],
      "required": true,
      "default": "pending"
    },
    "delivery_cost": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "coupon_applied_value": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "cart": {
      "type": "component",
      "repeatable": true,
      "component": "cart.product-quantity"
    },
    "subtotal_cart_cost": {
      "type": "decimal",
      "min": 0
    },
    "invoice": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    }
  }
}
